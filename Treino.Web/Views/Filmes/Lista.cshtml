@model IEnumerable<Treino.ViewModels.FilmeModel>

@{
    ViewData["Title"] = "Filmes";
}
<div class="position-relative overflow-hidden text-center bg-light">
    <div class="col-md-12 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal"> Api Studio Ghibi - @ViewData["Title"] </h1>
        <p class="lead font-weight-normal">Requisição para Listar todos as Pessoas do Studio Ghibi.</p>
    </div>
    <div class="product-device box-shadow d-none d-md-block"></div>
    <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
</div>
@foreach (var filmes in Model)
{
    <div class="w-100 my-md-3 pl-md-3">
        <div class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
            <div class="my-3 py-3">
                <h2 class="display-5">@filmes.title</h2>
                <p class="lead">Japonês: @filmes.original_title | Romanizado: @filmes.original_title_romanised</p>

                <p class="small">Id: @filmes.id</p>

                @Html.DisplayNameFor(model => model.url)

                <p class="lead">@filmes.description </p>
                <p class="lead">Produção: @filmes.producer | Data de Lançamento: @filmes.release_date</p>
                <p class="lead">Nota: @filmes.rt_score | Duração: @filmes.running_time min</p>
                <p class="small">Url para essa requisição: @filmes.url</p>

                <a asp-controller="Filmes" asp-action="ObtemFilme" asp-route-id="@filmes.id" class="btn btn-info">Detalhes</a>

            </div>
            <div class="bg-light box-shadow mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
                <h3 class="text-dark">Complementos</h3>
                @*@foreach (var filmesRealizados in filmes.filmesModel)
                {

                }*@
            </div>
        </div>
    </div>
}