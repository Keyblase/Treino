@model Treino.Data.API.Model.UsuarioModel
@{
    ViewData["Title"] = "Entrar";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Login" asp-action="Authenticate">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationDefault01">Nome</label>
                <input asp-for="Nome" type="text" class="form-control" required>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label>Senha</label>
                <input asp-for="Senha" type="password" class="form-control" aria-describedby="senha" required>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label">
                    Manter conectado
                </label>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Entrar</button>
    </form>