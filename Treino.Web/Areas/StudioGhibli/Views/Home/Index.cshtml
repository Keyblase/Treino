@{
    ViewData["Title"] = "Pagina Inicial Studio Ghibi";
}
<div class="position-relative overflow-hidden text-center bg-light">
    <div class="col-md-12 p-lg-5 mx-auto my-5 bg-info ">
        <h1 class="display-4 font-weight-normal"> @ViewData["Title"] - Api  </h1>
        <p class="lead font-weight-normal">Clique em um botão para ser redirecionado ao indice da pesquisa</p>
        <div class="col-lg-8 align-self-center">
            <a asp-area="StudioGhibli" asp-controller="Especies" asp-action="Lista" class="btn btn-primary mr-2">Espécies</a>
            <a asp-area="StudioGhibli" asp-controller="Filmes" asp-action="Lista" class="btn btn-primary mr-2">Filmes</a>
            <a asp-area="StudioGhibli" asp-controller="Locais" asp-action="Lista" class="btn btn-primary mr-2">Locais</a>
            <a asp-area="StudioGhibli" asp-controller="Pessoas" asp-action="Lista" class="btn btn-primary mr-2">Pessoas</a>
            <a asp-area="StudioGhibli" asp-controller="Veiculos" asp-action="Lista" class="btn btn-primary">Veiculos</a>
        </div>
    </div>
    <div class="product-device box-shadow d-none d-md-block"></div>
    <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
</div>

